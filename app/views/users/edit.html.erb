<h1>Edit user profile</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">

<%= form_for(@user) do |f| %>

<% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
<% end %>

ユーザID:
<%= f.text_field :name, :size => "20x1"%>
<br>
メールアドレス:
<%= f.text_field :email %>
<br>
年齢:
<%= f.number_field :age %>
<br>
一言:
<br>
<%= f.text_area :phrase, :size => "30x2"%>
<br>
<%= f.submit class: "btn btn-sm btn-primary" %>

<% end %>
	</div>
</div>