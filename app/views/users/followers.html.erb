<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        
<%= gravatar_for @user %>
<%= @user.name %>

      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  	<div class="followings-list">
  	  <h2>Following List</h2>
     <ul>
        <% @followers.each do |user| %>
 		      <%= link_to gravatar_for(user, size: 50), user %>
   		    <span class="user"><%= link_to user.name, user %></span>
       <% end %>
     </ul>
    </div>
  </div>
</div>