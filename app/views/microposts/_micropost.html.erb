<li id="micropost-<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user, size:50), micropost.user %>
	<span class="user"><%= link_to micropost.user.name, micropost.user %></span>
	<span class="content"><%= micropost.content %></span>
	<span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</span>
	<% if current_user == micropost.user %>
		<%= link_to "delete" , micropost, method: :delete, data: {confirm: "You Sure?"} %>
	<% end %>
	<% if current_user.favorite?(micropost) %>
		<%= form_for(current_user.favorite_relationships.find_by(micropost.id), html: {method: :delete}) do |f| %>

		<%#= current_user.favorite_relationships.inspect %>
<div>
	<%= hidden_field_tag :favorite, micropost.id %>
	<%= hidden_field_tag :user_id, micropost.user_id %>
</div>

<%= f.submit "No-Favorite", class: "btn" %>
	<% end %>
	<% else %>
		<%= form_for(current_user.favorite_relationships.build ) do |f| %>
		<%#= current_user.favorite_relationships.inspect %>
<div>
	<%= hidden_field_tag :favorite, micropost.id %>
	<%= hidden_field_tag :user_id, micropost.user_id %>
</div>

<%= f.submit "Favorite", class: "btn btn-primary" %>

	<% end %>
<% end %>
	</span>
</li>